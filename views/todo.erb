<!DOCTYPE html>
<html>
  <head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">

      <h3> <%= @list_name %> List </h3>
      <table class="table table-striped table-hover table-bordered table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>List</th>
            <th>Due On</th>
            <th>Completed?</th>
            <th>User</th>
            <th>Click To Complete</th>
          </tr>
        </thead>
        <tbody>
          <% @user_items.each do |item| %>
            <tr>
              <td><a href= "/lists/<%= item.list.name %>"><%= item["item_name"].capitalize %></a></td>
              <td><a href= "/lists/<%= item.list.name %>"><%= item.list.name %></a></td>
              <td><%= item["due_date"] %></td>
              <% if item.completed == true %>
                <td class="success"><%= item["completed"] %></td>
                <% else %>
                <td class="danger"><%= item["completed"] %></td>
                <% end %>
              <td><%= item.user.name.capitalize %></td>
              <td>
                <div>
                <form action="/items" method="GET">
                   <button class="btn btn-danger">Completed</button>
                </form>
                </div>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="well">
        <form action="/items" method="GET">
          <button class="btn btn-danger">All Items</button>
        </form>
      </div>

      <div class="well">
        <form action="/lists" method="GET">
          <button class="btn btn-danger">Search Lists</button>
        </form>
      </div>

    </div>
    <div class="container">
  </body>
</html>